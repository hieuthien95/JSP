<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE struts-config PUBLIC
          "-//Apache Software Foundation//DTD Struts Configuration 1.2//EN"
          "http://jakarta.apache.org/struts/dtds/struts-config_1_2.dtd">


<struts-config>


	<form-beans>
		<form-bean name="LoginForm" type="form.LoginForm" />
		<form-bean name="AhihiForm" type="form.AhihiForm" />
		<form-bean name="Na18Form" type="form.Na18Form" />
		<form-bean name="Na19Form" type="form.Na19Form" />
		<form-bean name="Na14Form" type="form.Na14Form" />
		<form-bean name="registerForm" type="form.UserRegisterForm" />
	</form-beans>
	<global-exceptions>

	</global-exceptions>

	<global-forwards>
	</global-forwards>

	<action-mappings>
		<action input="/login.jsp" name="LoginForm" path="/Login"
			scope="session" type="action.LoginAction">
			<forward name="success" path="/success.jsp" />
			<forward name="failure" path="/failure.jsp" />
		</action>

		<action input="/na18.jsp" name="Na18Form" path="/Na18" scope="session"
			type="action.Na18Action">
			<forward name="success" path="/success.jsp" />
			<forward name="failure" path="/failure.jsp" />
		</action>
		<action path="/Na18View" type="action.Na18Action">
			<forward name="success" path="/na18.jsp" />
		</action>

		<action input="/na19.jsp" name="Na19Form" path="/Na19" scope="session"
			type="action.Na19Action">
			<forward name="success" path="/success.jsp" />
			<forward name="failure" path="/failure.jsp" />
		</action>
		<action path="/Na19View" type="action.Na19Action">
			<forward name="success" path="/na19.jsp" />
		</action>

		<action input="/na14.jsp" name="Na14Form" path="/Na14" scope="request"
			type="action.Na14Action" validate="true">
			<forward name="success" path="/na14.jsp" />
			<forward name="failure" path="/na14.jsp" />
		</action>
		<!--
		<action path="/Na14View" type="action.Na14Action">
			<forward name="success" path="/na14.jsp" />
		</action>  
		-->

		<action name="Na14Form" type="action.Na14Action" input="/na14.jsp" 
			path="/employee" parameter="parameter" validate="false">
			<forward name="edit" path="/na18.jsp" />
			<forward name="search" path="/na14.jsp" />
			<forward name="save" path="/na19.jsp" />
		</action>


		<action input="/login_db.jsp" name="registerForm" path="/register"
			type="action.UserRegisterAction">
			<forward name="success" path="/success_db.jsp" />
		</action>


		<action path="/AhihiAction" type="action.AhihiAction">
			<forward name="success" path="/ahihi.jsp" />
		</action>
		<action path="/AbcAction" type="action.AhihiAction">
			<forward name="success1" path="/ahihi.jsp" />
		</action>

	</action-mappings>

	<controller processorClass="org.apache.struts.tiles.TilesRequestProcessor" />

	<message-resources parameter="com/vaannila/ApplicationResource" />

	<plug-in className="org.apache.struts.tiles.TilesPlugin">
		<set-property property="definitions-config" value="/WEB-INF/tiles-defs.xml" />
		<set-property property="moduleAware" value="true" />
	</plug-in>

	<plug-in className="org.apache.struts.validator.ValidatorPlugIn">
		<set-property property="pathnames"
			value="/WEB-INF/validator-rules.xml,/WEB-INF/validation.xml" />
	</plug-in>

</struts-config>
